<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
</head>
<body>
    <h1>Welcome, <%= user.name %>!</h1>
    <p>Age: <%= user.age %></p>
    <p>Fitness Goals: <%= user.goals %></p>

    <h2>Your Entries</h2>
    <ul>
        <% user.entries.forEach(entry => { %>
            <li>Date: <%= entry.date %>, Calories: <%= entry.calories %>, Protein: <%= entry.protein %>g, Fat: <%= entry.fat %>g, Carbohydrates: <%= entry.carbohydrates %>g, Exercise: <%= entry.exercise %></li>
        <% }) %>
    </ul>

    <h2>Enter Daily Nutrition</h2>
    <form action="/users/profile/<%= user.id %>/entry" method="POST">
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" required><br>
        <label for="calories">Calories:</label>
        <input type="number" id="calories" name="calories" required><br>
        <label for="protein">Protein (g):</label>
        <input type="number" id="protein" name="protein" required><br>
        <label for="fat">Fat (g):</label>
        <input type="number" id="fat" name="fat" required><br>
        <label for="carbohydrates">Carbohydrates (g):</label>
        <input type="number" id="carbohydrates" name="carbohydrates" required><br>
        <label for="exercise">Exercise:</label>
        <input type="text" id="exercise" name="exercise"><br>
        <button type="submit">Add Entry</button>
    </form>

    <a href="/users/logout">Logout</a>
</body>
</html>
